{
  "name": "template",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "envs": "turbo envs",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "check-types": "turbo run check-types",
    "shadcn": "bun --filter @template/ui shadcn",
    "db:generate": "bun --filter @template/database db:generate",
    "db:migrate": "bun --filter @template/database db:migrate",
    "db:push": "bun --filter @template/database db:push",
    "db:studio": "bun --filter @template/database db:studio",
    "clean-workspaces": "turbo clean-workspace && rm -rf node_modules"
  },
  "devDependencies": {
    "prettier": "^3.7.3",
    "turbo": "^2.6.1",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.19",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/swagger": "^1.3.1",
    "@sinclair/typebox": "^0.34.41",
    "@tabler/icons-react": "^3.35.0",
    "@tailwindcss/postcss": "^4.1.17",
    "better-auth": "^1.4.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "next": "^16.0.6",
    "next-themes": "^0.4.6",
    "tailwind": "^4.0.0",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0"
  }
}
